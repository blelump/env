# Git
alias gh='git diff HEAD $1'
alias gss='git status'
alias gs='git status'
alias ga='git add'
alias gch='git checkout $1'
alias gl='git lg --oneline -10'
alias gc='git commit'

# Docker
alias dl='docker logs -f --tail=200 $1'
alias de='docker exec -it "$1" bash'
alias dr='docker run -it --rm "$1" bash'
alias dp='docker ps'

# Tmux
alias tm='tmux'
alias tma='tmux a'
alias tat='tmux attach -t'
alias tls='tmux ls'
alias tmr='tmux source-file ~/.tmux.conf'

alias vim='nvim'
alias ls='ls --color=auto'
